<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gradient untuk memberikan warna pada background -->
    <gradient
        android:angle="90"
        android:endColor="@color/white"
        android:startColor="@color/white" />

    <!-- Sudut bulat pada rectangle -->
    <corners android:radius="4dp" />

    <!-- Stroke untuk membuat border (outlined) -->
    <stroke
        android:width="1dp"
        android:color="@color/black_200" />

</shape>